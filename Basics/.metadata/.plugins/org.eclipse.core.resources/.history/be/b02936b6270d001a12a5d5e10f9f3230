package com.sunny.basiccoreprograms;

/*
* created by:SunnyRaj
* Date 22/11/2019
* Purpose: this programm is used to find percentage of head and tail in any throw 
**/

public class Head_Tail 
{
	public static int[] perc(int n)
	{
		int [] result= new int[2];
		for(int i=0;i<n;i++) 
		{
			if (Math.random() < 0.5)
				{
				result[0]++;//tails
				System.out.println("tails=="+result[0]);
				}
			else
				{
				result[1]++;//heads
				System.out.println("heads=="+result[1]);
				}
		}
		return result;
		
	}
	public static void main(String[] args) 
	{
		System.out.println("Enter the number of times you want to flip an coin");
		int n = Utility.inputInteger();
		int res[]=Head_Tail.perc(n);
		
		System.out.println("percentage of heads is    "+res[1]/(n));
		System.out.println("percentage of heads is    "+res[0]/(n));
		
	}

}
